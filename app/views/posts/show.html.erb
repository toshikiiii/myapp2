<h3>ユーザー詳細</h3>

<table>
  <tr>
    <th>名前</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>年齢</th>
    <td><%= @user.age %></td>
  </tr>
  <tr>
    <th>一言紹介</th>
    <td><%= @user.introduction %></td>
  </tr>
</table>


<h3>新規投稿</h3>

<%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th><%= f.label :content, "投稿内容" %></th>
      <td><%= f.text_area :content, class:"posts-content" %></td>
    </tr>
  </table>
  <%= f.hidden_field :user_id, value: @user.id %>
  <div>
    <ul>
      <li><%= f.submit "投稿を完了する"%></li>
    </ul>
  </div>
<% end %>

<div>
  <ul>
    <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
  </ul>
</div>
